{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

<div class="portlet light ">
    <div class="portlet-title tabbable-line">
        <div class="caption">
            <i class="icon-globe theme-font hide"></i>
            <span class="caption-subject font-green-sharp bold uppercase"><i class="fa  fa-tag"></i> Datos del enumerador </span>
        </div>
        <div class="actions btn-set">
            <a href="{{ path('positibe_enum_index', {'type': app.request.get('type')}) }}"
               name="back" class="btn btn-default btn-circle"><i class="fa fa-angle-left"></i> Atras</a>
            <a href="{{ app.request.server.get('REQUEST_URI') }}" class="btn btn-default btn-circle "><i
                        class="fa fa-reply"></i> Resetear</a>
            <button class="btn green-haze btn-circle" type="submit"><i class="fa fa-check"></i> Guardar</button>
            {% if enum is defined and enum.id is not null %}
                <a class="btn red-haze btn-circle" data-toggle="modal" href="#positibe_enum_remove">
                    <i class="fa fa-trash"></i> Remover
                </a>
            {% endif %}
        </div>

    </div>
    <div class="portlet-body">
        <div class="tabbable">

            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#form_congress_tab_basic" data-toggle="tab" aria-expanded="true">Información básica</a>
                </li>
                <li class="pull-right">
                    {{ form_widget(form.locale, {'attr': {'class': 'dropdown pull-right btn btn-circle' }}) }}
                </li>
            </ul>
            <div class="tab-content">

                <div class="tab-pane active" id="form_congress_tab_basic">
                    {{ form_widget(form) }}
                </div>
            </div>
        </div>
        <div class="form-actions text-right">
            <hr>
            <a href="{{ path('positibe_enum_index', {'type': app.request.get('type')}) }}" class="btn btn-default">Cancelar</a>
            <button class="btn btn-primary"><i class="fa fa-check"></i> Guardar</button>
        </div>
    </div>
</div>